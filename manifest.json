{
  "name": "Heads Up",
  "version": "0.1",
  "description": "Keep Ya Head Up",
  "author": "De Voorhoede",
  "minimum_chrome_version": "69.0", 
  "permissions": ["activeTab"],
  "icons": {
    "36": "icons/icon-36.png",
    "96": "icons/icon-36.png"
  },
  "background":  {
    "scripts": ["background-scripts/background.js"]
  },
  "devtools_page": "devtools/devtools-page.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/content.js"]
    }
  ],
   "manifest_version": 2
}