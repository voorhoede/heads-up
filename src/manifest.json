{
  "name": "Heads Up",
  "version": "0.0.1",
  "description": "View your <head> data for easier developing.",
  "author": "De Voorhoede",
  "minimum_chrome_version": "69.0",
  "permissions": ["activeTab"],
  "icons": {
    "36": "assets/icons/icon-36.png",
    "96": "assets/icons/icon-96.png"
  },
  "background":  {
    "scripts": ["background.js"]
  },
  "devtools_page": "devtools.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
   "manifest_version": 2
}
